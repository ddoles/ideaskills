<div class="row">
    <div class="col-md-6">
      <div class="thumbnail">
        <%= image_tag @user.image.url :medium %>
      </div>
    </div>
    <div class="col-md-6">
      <h3><%= @user.name %></h3><br>
      <p><%= @user.email %></p><br>
      <p><%= raw @user.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
    </div>
</div>

<br>


<%= link_to 'Back', :back, class: "btn btn-link" %>
