<div id="tag_cloud">
  <% tag_cloud Skill.tag_counts, %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<br>

<div class="center">
  <div class="row">
    <% @skills.each do |skill| %>
       <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(skill.image.url :medium), skill %>
            <div class="caption">
              <h3><%= skill.title %></h3>
              <p><%= skill.description %></p><br>
              <p>Track:<%= skill.track %></p><br>
              <p>Experience:<%= skill.level %></p><br>
              <p><%= raw skill.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
              <%= link_to 'Show', skill, class: "btn btn-link" %>
              <% if (user_signed_in?) && (current_user == skill.user) %>
                <%= link_to 'Edit', edit_skill_path(skill), class: "btn btn-link" %>
                <%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>  
            <% end %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
<br>

<% if user_signed_in? %>
<%= link_to 'New Skill', new_skill_path, class: "btn btn-link" %>
<% end %>