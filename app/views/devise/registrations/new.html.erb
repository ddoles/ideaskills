<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
  	<%= f.label :email %><br />
  	<%= f.email_field :email, :placeholder =>"Enter Email Address", autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, :placeholder =>"Enter First and Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, :placeholder =>"Tell your major and actual or expected graduation. Additionally describe your skills, relevant course work or projects you have worked on, etc.", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, "Skill Tags (seperated by commas)" %><br>
    <%= f.text_field :tag_list, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="actions">
  	<%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
