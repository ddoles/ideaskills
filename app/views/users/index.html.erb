
  <div id="tag_cloud">
   <% tag_cloud User.tag_counts, %w{s m l} do |tag, css_class| %>
     <%= link_to tag.name, tag_path(tag.name), class: css_class %>
   <% end %>
  </div>
<br>


<div class="center">
  <div class="row">
    <% @users.each do |user| %>
       <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(user.image.url :medium), user %>
            <div class="caption">
              <h3><%= user.name %></h3>
              <p><%= user.email %></p>
              <p><%= raw user.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>