<div class="center">
  <div class="row">
    <% @users.each do |user| %>
       <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(user.image.url :thumb), user %>
            <div class="caption">
              <h3><%= user.name %></h3>
              <br>
              <p><%= user.tag_list %></p>
              <br>
              <p><%= truncate(user.description, :length => 80) %></p>
              <%= link_to 'More...', user, class: "btn btn-link" %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>